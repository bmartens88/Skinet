{
  "files.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/[Bb]in": true,
    "**/[Oo]bj": true
  },
  "files.eol": "\n",
  "editor.insertSpaces": true,
  "editor.tabSize": 2,
  "editor.detectIndentation": false,
  "editor.fontSize": 12,
  "workbench.editor.decorations.colors": true,
  "workbench.editor.decorations.badges": true
}